{
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/pacman.sh",
        "scripts/bootloader.sh",
        "scripts/ssh.sh",
        "scripts/reboot.sh",
        "scripts/sudo.sh",
        "scripts/user.sh",
        "scripts/aur.sh",
        "scripts/virtualbox.sh",
        "scripts/ruby.sh",
        "scripts/chef.sh",
        "scripts/puppet.sh",
        "scripts/vagrant.sh",
        "scripts/reboot.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "override": {
        "virtualbox": {
          "execute_command": "sh '{{.Path}}'"
        },
        "vmware": {
          "execute_command": "sh '{{.Path}}'"
        }
      }
    }
  ],
  "builders": [
    {
      "type": "virtualbox",
      "boot_command": [
        "<enter><wait>",
        "<Wait30><wait>",
        "echo \"sshd: ALL\" > /etc/hosts.allow<enter><wait>",
        "passwd<enter><wait>",
        "veewee<enter><wait>",
        "veewee<enter><wait>",
        "systemctl start sshd.service<enter><wait><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 10140,
      "guest_os_type": "ArchLinux_64",
      "iso_checksum": "<html>",
      "iso_checksum_type": "md5",
      "iso_url": "http://mirrors.kernel.org/archlinux/iso/2013.12.01/<title>404:",
      "ssh_username": "root",
      "ssh_password": "veewee",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -h now' > shutdown.sh; sh 'shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "256"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    },
    {
      "type": "vmware",
      "boot_command": [
        "<enter><wait>",
        "<Wait30><wait>",
        "echo \"sshd: ALL\" > /etc/hosts.allow<enter><wait>",
        "passwd<enter><wait>",
        "veewee<enter><wait>",
        "veewee<enter><wait>",
        "systemctl start sshd.service<enter><wait><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 10140,
      "guest_os_type": "other26xlinux-64",
      "iso_checksum": "<html>",
      "iso_checksum_type": "md5",
      "iso_url": "http://mirrors.kernel.org/archlinux/iso/2013.12.01/<title>404:",
      "ssh_username": "root",
      "ssh_password": "veewee",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -h now' > shutdown.sh; sh 'shutdown.sh'",
      "vmx_data": {
        "memsize": "256",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    }
  ]
}