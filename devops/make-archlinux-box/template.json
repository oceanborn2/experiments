{
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/pacman.sh",
        "scripts/bootloader.sh",
        "scripts/ssh.sh",
        "scripts/reboot.sh",
        "scripts/sudo.sh",
        "scripts/user.sh",
        "scripts/aur.sh",
        "scripts/virtualbox.sh",
        "scripts/ruby.sh",
        "scripts/chef.sh",
        "scripts/puppet.sh",
        "scripts/vagrant.sh",
        "scripts/reboot.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "sh '{{.Path}}'"
        }
      }
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<enter>",
        "echo \"sshd: ALL\" > /etc/hosts.allow<enter>",
        "passwd<enter>",
        "admin<enter>",
        "admin<enter>",
        "systemctl start sshd.service<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": 10140,
      "guest_os_type": "ArchLinux",
      "iso_checksum": "d1c10ef281789a02a1e8d2da6affcd3e",
      "iso_checksum_type": "md5",
      "iso_url": "file:///d:/STORE/isos/archlinux-2014.11.01-dual.iso",
      "ssh_username": "root",
      "ssh_password": "admin",
      "ssh_port": 22,
      "ssh_wait_timeout": "100s",
      "shutdown_command": "echo 'shutdown -h now' > shutdown.sh; sh 'shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    }
  ]
}